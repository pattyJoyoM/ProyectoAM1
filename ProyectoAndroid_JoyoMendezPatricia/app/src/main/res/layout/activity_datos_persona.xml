<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fn1"
    android:padding="20dp">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNombreV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/blanco"
                android:hint="Nombre"
                android:textColorHint="@color/blanco"/>
            <TextView
                android:id="@+id/tvApellidoV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/blanco"
                android:hint="Apellido"
                android:textColorHint="@color/blanco"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvDireccionV"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/blanco"
                android:hint="Direccion"
                android:textColorHint="@color/blanco"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvEdadV"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginBottom="10dp"
                android:inputType="phone"
                android:textColor="@color/blanco"
                android:hint="Edad"
                android:textColorHint="@color/blanco"/>


              <TextView
                    android:id="@+id/tvFechaCV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar"
                    android:textColor="@color/blanco"
                    android:textSize="20sp"
                  android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvTipoDocV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/blanco"
                    android:text="Tipo de documento"
                    android:layout_marginBottom="10dp"/>



            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tvNumDocV"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/blanco"
                android:hint="Numero de documento"
                android:inputType="phone"
                android:textColorHint="@color/blanco"
                android:layout_marginBottom="10dp"/>

                <TextView
                    android:id="@+id/tvCaracV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/blanco"
                    android:text="Caracteristica"
                    android:layout_marginBottom="10dp"/>


            <Button
                android:id="@+id/btnVolver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Volver" />

        </LinearLayout>





    </ScrollView>


</LinearLayout>