<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/fn1"
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tvNombreE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Nombre"
                android:textColor="@color/blanco"
                android:textColorHint="@color/blanco"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tvApellidoE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Apellido"
                android:textColor="@color/blanco"
                android:textColorHint="@color/blanco"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tvDireccionE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Direccion"
                android:textColor="@color/blanco"
                android:textColorHint="@color/blanco"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/tvEdadE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Edad"
                android:inputType="phone"
                android:textColor="@color/blanco"
                android:textColorHint="@color/blanco"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fecha de Nacimiento"
                    android:textColor="@color/blanco"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tvFechaCE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Seleccionar"
                    android:textColor="@color/blanco"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tipo de documento"
                    android:textColor="@color/blanco"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spTipoDocE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/plomoc"
                    android:entries="@array/data"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <EditText
                android:id="@+id/tvNumDocE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Numero de documento"
                android:inputType="phone"
                android:textColor="@color/blanco"
                android:textColorHint="@color/blanco"
                android:textSize="20sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Caracteristica"
                    android:textColor="@color/blanco"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/spCaracE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/plomoc"
                    android:entries="@array/carac"
                    android:spinnerMode="dialog" />

            </LinearLayout>


            <Button
                android:id="@+id/btnEditarE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Editar" />

            <Button
                android:id="@+id/btnEliminarE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Eliminar" />
        </LinearLayout>


    </ScrollView>
</LinearLayout>